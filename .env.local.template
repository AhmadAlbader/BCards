# ============================================
# LOCAL ENVIRONMENT - TEMPLATE (.env.local)
# ============================================
# Copy this to .env.local and update with your machine's IP

# Auto-detect your IP by running: ifconfig | grep "inet " (macOS/Linux) or ipconfig (Windows)
# Then update MACHINE_IP below
MACHINE_IP=192.168.1.123

# Frontend URLs
NEXT_PUBLIC_API_URL=http://MACHINE_IP:8000/api
NEXT_PUBLIC_APP_URL=http://MACHINE_IP:3000

# Backend URLs
API_HOST=MACHINE_IP
API_PORT=8000
FRONTEND_HOST=MACHINE_IP
FRONTEND_PORT=3000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/digital_cards
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=digital_cards

# CORS - Allow localhost, 127.0.0.1, and current machine IP
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000,http://MACHINE_IP:3000,http://MACHINE_IP:8000

# Trusted Hosts
ALLOWED_HOSTS=localhost,127.0.0.1,MACHINE_IP

# Application
SECRET_KEY=local-dev-key-change-in-production
DEBUG=true
ENVIRONMENT=local

SSL_ENABLED=false
