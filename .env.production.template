# ============================================
# PRODUCTION ENVIRONMENT (.env.production)
# ============================================
# Template for production DigitalOcean Droplet
# IMPORTANT: Do NOT commit this file to git
# Fill in your actual domain and values on the server

# Frontend URLs (replace with your domain)
NEXT_PUBLIC_API_URL=https://api.yourdomain.com/api
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# Backend URLs
API_HOST=your-droplet-ip-or-domain.com
API_PORT=443
FRONTEND_HOST=yourdomain.com
FRONTEND_PORT=443

# Database (use managed database or local)
DATABASE_URL=postgresql+asyncpg://postgres:STRONG_PASSWORD@db.yourdomain.com:5432/digital_cards
DB_USER=postgres
DB_PASSWORD=STRONG_PASSWORD
DB_NAME=digital_cards

# CORS and Security
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
ALLOWED_HOSTS=yourdomain.com,api.yourdomain.com,your-droplet-ip

# Application
SECRET_KEY=GENERATE_A_STRONG_SECRET_KEY_HERE
DEBUG=false
ENVIRONMENT=production

# SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem
