# ============================================
# DEVELOPMENT ENVIRONMENT (.env.development)
# ============================================
# Used for local development on your machine (192.168.1.123)

# Frontend URLs
NEXT_PUBLIC_API_URL=http://192.168.1.123:8000/api
NEXT_PUBLIC_APP_URL=http://192.168.1.123:3000

# Backend URLs
API_HOST=192.168.1.123
API_PORT=8000
FRONTEND_HOST=192.168.1.123
FRONTEND_PORT=3000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@postgres:5432/digital_cards
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=digital_cards

# CORS and Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://192.168.1.123:3000,http://192.168.1.123:8000
ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.123

# Application
SECRET_KEY=dev-secret-key-change-in-production
DEBUG=true
ENVIRONMENT=development

# SSL/TLS (not needed for local development)
SSL_ENABLED=false
